<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:background="@drawable/card_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="#CAC1C1"
        android:gravity="center"
        android:visibility="visible"
        android:text="Quel est l'actuel premier ministre d'Haiti?"
        android:elevation="5dp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_below="@id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="invisible"
        android:gravity="center"
        android:text="Alex Didier"
        android:textSize="40sp"/>
</RelativeLayout>



